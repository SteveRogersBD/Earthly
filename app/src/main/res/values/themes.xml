<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Earthly" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary color (e.g., green for nature, science vibes) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color (bright accent for call-to-actions) -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Background color (light for clean aesthetic) -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@android:color/black</item>

        <!-- Surface color (for cards, dialogs, etc.) -->
        <item name="colorSurface">#FF5722</item>
        <item name="colorOnSurface">@android:color/black</item>

        <!-- Text color -->
        <item name="android:textColor">@color/white</item>

        <!-- Dark and Light modes -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>